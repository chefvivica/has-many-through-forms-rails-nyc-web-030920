<div class=post-content>
  <%= @post.content %>
</div>
<%= form_for post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br><br><br>

  <%= f.label "Content" %>
  <%= f.text_area :content %><hr>

 <p>please select your categories </P><%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><hr>

<p>Be the first one to create a new categoty!</p> <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <p> Category:<%= categories_fields.text_field :name %></p>

  <% end %>
  <%= f.submit %>
<% end %>
